{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		// "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "Node16",
		"target": "ES2022",
		"moduleResolution": "Node16",
		"lib": [
			"es2022"
		],
		"typeRoots": [
			"@types",
			"./src/@types"
		],
		"allowJs": true
	},
	"include": [
		"./src/**/*",
		"./integration-tests/**/*",
		"./scripts/**/*",
		"jasmine-reporters.js",
	]
}
