{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-classes-per-file": [false],
        "ordered-imports": [false],
        "object-literal-sort-keys": [false],
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "ban": [
            true,
            "xit",
            {"name": "fit"},
            {"name": ["xdescribe"]},
            ["fdescribe"]
        ]
    },
    "rulesDirectory": []
}
